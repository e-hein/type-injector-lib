{
  "name": "type-inject",
  "version": "1.0.0",
  "description": "inject typescript classes recoursively",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register ./src/**/*.spec.ts",
    "test:watch": "watch-npm test",
    "lint": "eslint .eslintrc.cjs .",
    "build": "tsc -P tsconfig.build.json",
    "coverage": "nyc --reporter=html --reporter=text-summary --exclude '**/*.spec.ts' mocha -r ts-node/register ./src/**/*.spec.ts",
    "doc": "typedoc --plugin typedoc-plugin-markdown --out ./typedoc --excludePrivate --excludeProtected src/index.ts"
  },
  "watch": {
    "test": {
      "patterns": [
        "test.ts",
        "src"
      ],
      "extensions": "*",
      "quiet": false,
      "inherit": false,
      "verbose": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/e-hein/type-inject.git"
  },
  "keywords": [
    "typescript",
    "inject",
    "ioc",
    "di",
    "type-safe"
  ],
  "author": "emanuel.hein@code-better.it",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "chai": "^4.3.6",
    "eslint": "^8.23.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-tsdoc": "^0.2.16",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.13",
    "typedoc-plugin-markdown": "^3.13.5",
    "typescript": "^4.8.2",
    "watch-npm": "^1.0.1"
  }
}
